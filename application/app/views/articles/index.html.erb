<div class="hero-unit">
  <h1>Articles#index</h1>
  <%= link_to(' Back to pages ', {:controller => 'pages', :action => 'index', :category_id => @category_id}, :class => 'btn btn-xs btn-default') %>

  <hr>

  <%= link_to("Add new article", {:action => 'new', :page_id => @pages, :category_id => @category_id}, :class => 'btn btn-mini btn-primary')  %>

  <p style="text-align: right;">Count articles: <%= @articles.size %></p>

  <table class="table table-striped">
    <tr class="info">
      <th>Position</th>
      <th>Article name</th>
      <th>Category</th>
      <th>Page</th>
      <th>Visibility</th>
      <th>Action</th>
    </tr>
  <% @articles.each do |a| %>
    <tr>
      <td><%= a.position %></td>
      <td><%= a.name %></td>
      <td><%= @category.name %></td>
      <td><%= page_name(a) %></td>
      <td class="center"><%= visibility_icon(a.visibility) %></td>
      <td class="action">
        <%= link_to('Show', {:action => 'show', :id => a.id, :category_id => @category_id, :page_id => @pages}, :class => 'btn btn-xs btn-default') %>
        <%= link_to('Edit', {:action => 'edit', :id => a.id, :category_id => @category_id, :page_id => @pages}, :class => 'btn btn-xs btn-primary') %>
        <%= link_to('Delete', {:action => 'delete', :id => a.id, :category_id => @category_id, :page_id => @pages}, :class => 'btn btn-xs btn-danger') %>
      </td>
    </tr>
  <% end %>
  </table>
</div>

