<div class="hero-unit">
  <h1>Galleries#new</h1>

  <hr>

  <h1>New Gallery</h1>

  <%= form_for(:galleries, :url => {:action => 'create'}) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f}) %>

