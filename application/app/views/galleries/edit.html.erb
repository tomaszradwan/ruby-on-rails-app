<div class="hero-unit">
  <h1>Galleries#edit</h1>

  <hr>

  <h1>Edit Gallery: <%= @galleries.name %></h1>

  <%= form_for(:galleries, :url => {:action => 'update', :id => @galleries.id}, :method => 'POST') do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div>
        <%= submit_tag('Update', :class => 'btn btn-primary') %>
    </div>
  <% end %>

  <br>

  <%= link_to('Back to main page', {:action=> 'index'}, :class => 'btn btn-warning') %>
</div>
