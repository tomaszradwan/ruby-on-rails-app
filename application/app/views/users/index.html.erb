<div class="hero-unit">
  <h1>Users#index</h1>

  <%= link_to("Add new User", {:action => 'new'}, :class => 'btn btn-mini btn-primary')  %>

  <p style="text-align: right;">Count Users: <%= @users.size %></p>

  <table class="table table-striped">
    <tr class="info">
      <th>ID</th>
      <th>User</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  <% @users.each do |u| %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.user %></td>
      <td><%= u.name %></td>
      <td><%= u.surname %></td>
      <td><%= mail_to(u.email) %></td>
      <td class="action">
        <%= link_to('Show', {:action => 'show', :id => u.id}, :class => 'btn btn-xs btn-default') %>
        <%= link_to('Edit', {:action => 'edit', :id => u.id}, :class => 'btn btn-xs btn-primary') %>
        <%= link_to('Delete', {:action => 'delete', :id => u.id}, :class => 'btn btn-xs btn-danger') %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
