<div class="hero-unit">
	<h1>Pages#index</h1>

	<hr>

	<%= link_to("Add new page", {:action => 'new'}, :class => 'btn btn-mini btn-primary')  %>

	<p style="text-align: right;">Count pages: <%= @pages.size %></p>

	<table class="table table-striped">
		<tr class="info">
			<th>Position</th>
			<th>Name</th>
			<th>Visibility</th>
			<th>Articles</th>
			<th>Action</th>
		</tr>
	<% @pages.each do |p| %>
		<tr>
			<td><%= p.position %></td>
			<td><%= p.name %></td>
			<td class="center"><%= visibility_icon(p.visibility) %></td>
			<td class="center"><%= p.articles.size %></td>
			<td class="action">
				<%= link_to('Show', {:action => 'show', :id => c.id}, :class => 'btn btn-xs btn-default') %>
				<%= link_to('Edit', {:action => 'edit', :id => c.id}, :class => 'btn btn-xs btn-primary') %>
				<%= link_to('Delete', {:action => 'delete', :id => c.id}, :class => 'btn btn-xs btn-danger') %>
			</td>
		</tr>
	<% end %>	
	</table>
</div>
