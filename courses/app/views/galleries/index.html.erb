<div class="hero-unit">
  <h1>Galleries#index</h1>

  <hr>

  <%= link_to("Add new gallery", {:action => 'new'}, :class => 'btn btn-mini btn-primary')  %>

  <p style="text-align: right;">Count galleries: <%= @galleries.size %></p>

  <table class="table table-striped">
    <tr class="info">
      <th>Name</th>
      <th>Position</th>
      <th>Visibility</th>
      <th>Action</th>
    </tr>
  <% @galleries.each do |g| %>
    <tr>
      <td><%= g.name %></td>
      <td><%= g.position %></td>
      <td class="center"><%= visibility_icon(g.visibility) %></td>
      <td class="action">
        <%= link_to('Show', {:action => 'show', :id => g.id}, :class => 'btn btn-xs btn-default') %>
        <%= link_to('Edit', {:action => 'edit', :id => g.id}, :class => 'btn btn-xs btn-primary') %>
        <%= link_to('Delete', {:action => 'delete', :id => g.id}, :class => 'btn btn-xs btn-danger') %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
