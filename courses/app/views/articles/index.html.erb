<div class="hero-unit">
  <h1>Articles#index</h1>

  <hr>

  <%= link_to("Add new article", {:action => 'new'}, :class => 'btn btn-mini btn-primary')  %>

  <p style="text-align: right;">Count articles: <%= @articles.size %></p>

  <table class="table table-striped">
    <tr class="info">
      <th>Position</th>
      <th>Page</th>
      <th>Articles name</th>
      <th>Visibility</th>
      <th>Action</th>
    </tr>
  <% @articles.each do |p| %>
    <tr>
      <td><%= p.position %></td>
      <td><%= p.page.name %></td>
      <td><%= p.name %></td>
      <td class="center"><%= visibility_icon(p.visibility) %></td>
      <td class="action">
        <%= link_to('Show', {:action => 'show', :id => p.id}, :class => 'btn btn-xs btn-default') %>
        <%= link_to('Edit', {:action => 'edit', :id => p.id}, :class => 'btn btn-xs btn-primary') %>
        <%= link_to('Delete', {:action => 'delete', :id => p.id}, :class => 'btn btn-xs btn-danger') %>
      </td>
    </tr>
  <% end %>
  </table>
</div>

