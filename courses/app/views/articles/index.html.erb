<div class="hero-unit">
	<h1>Articles#index</h1>

	<hr>

	<%= link_to("Add new article", {:action => 'new'}, :class => 'btn btn-mini btn-primary')  %>

	<p style="text-align: right;">Count articles: <%= @articles.size %></p>

	<table class="table table-striped">
		<tr class="info">
			<th>Position</th>
			<th>Page</th>
			<th>Articles name</th>
			<th>Visibility</th>
			<th>Action</th>
		</tr>
	<% @articles.each do |a| %>
		<tr>
			<td><%= a.position %></td>
			<td><%= a.page.name %></td>
			<td><%= a.name %></td>
			<td class="center"><%= visibility_icon(a.visibility) %></td>
			<td class="action">
				<%= link_to('Show', {:action => 'show', :id => a.id}, :class => 'btn btn-xs btn-default') %>
				<%= link_to('Edit', {:action => 'edit', :id => a.id}, :class => 'btn btn-xs btn-primary') %>
				<%= link_to('Delete', {:action => 'delete', :id => a.id}, :class => 'btn btn-xs btn-danger') %>
			</td>
		</tr>
	<% end %>	
	</table>
</div>

