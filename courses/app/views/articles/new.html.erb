<div class="hero-unit">
	<h1>Articles#new</h1>

	<hr>

	<h1>New Article</h1>

	<%= form_for((:articles), :url => {:action => 'create'}, :method => 'get') do |f| %>

		<%= render(:partial => 'form', :locals => {:f => f}) %>

		<div>
				<%= submit_tag('Create', :class => 'btn btn-primary') %>
		</div>
	<% end %>

	<br/>

	<%= link_to('Back to main page', {:action=> 'index'}, :class => 'btn btn-warning') %>
</div>
